                        <a href="{{ path('app_admin') }}" class="nav-link px-2 link-dark text-center">Dashboard</a>
                    </li>
                    {% if app.user and app.user.getAdminEmail() and app.user.getAdminEmail() is not empty %}
                        <li class="nav-item">
                            <a href="{{ path('app_admin_mailbox') }}" class="nav-link px-2 link-dark text-center">Boîte Mail</a>
                        </li>
                    {% endif %}
                </ul>
                <div class="flex-row text-center">
                    {% if app.user %}
                        <div class="dropdown-center mx-auto mx-md-0 user-dropdown">
                            <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-user"></i> {{ app.user.firstname }} {{ app.user.lastname }}
                            </button>
                            <ul class="dropdown-menu shadow dropdown-menu-md-start" style="left: 0; right: 0">
                                <li>
                                    <a class="dropdown-item d-flex gap-2 align-items-center" href="{{ path('app_account') }}">
