<div class="bg-white pb-1 shadow">
    <div class="container">
        <nav class="navbar navbar-expand-md d-flex flex-wrap align-items-center justify-content-center justify-content-between py-3 mb-4 border-bottom">
            <span class="d-flex align-items-center mb-2 mb-md-0">
                <a href="{{ path('app_home') }}">
                    <img src="{{ asset('assets/images/logo.png') }}" height="70" role="img" aria-label="Titre" alt="Titre"/>
                </a>
            </span>

            <button class="navbar-toggler collapsed border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="flex-column flex-md-row nav col-12 col-md-auto mb-2 mb-md-0 mx-auto">
